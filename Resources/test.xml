				<frame path="impacto1.png" wait="0.05" size="1.0" />
				<frame path="impacto2.png" wait="0.05" size="1.0" />
			</anim>
		</impacto>
		
		<!-- 
		************************************************************************
		enemigos
		************************************************************************ 
		-->
		
		<enemyHonesto>
			<anim name="default" loop="1" fixedImage="0">
				<frame path="aliensprite1.png" wait="0.3" size="0.30" />
